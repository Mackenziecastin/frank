# ADT Automation Configuration
# Copy this file to .env and fill in your actual values

# SFTP Configuration
SFTP_HOST=mfts.adt.com
SFTP_USERNAME=directagent
SFTP_PASSWORD=your-sftp-password-here
SFTP_PORT=22
SFTP_DIRECTORY=/Resi_New

# Email Configuration (for error notifications)
# For Gmail, you'll need to use an "App Password" instead of your regular password
# See: https://support.google.com/accounts/answer/185833
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password-here

# Recipients for notifications (comma-separated for multiple recipients)
RECIPIENT_EMAIL=mackenzie.castin@directagents.com,debbie.tanudirjo@directagents.com

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# LaserAway Email Automation Configuration
# Email account that RECEIVES the LaserAway reports
LASERAWAY_IMAP_SERVER=imap.gmail.com
LASERAWAY_IMAP_PORT=993
LASERAWAY_IMAP_EMAIL=your-email@directagents.com
LASERAWAY_IMAP_PASSWORD=your-email-password

# LaserAway Report Email Identification
LASERAWAY_REPORT_SENDER=sender@laseraway.com
LASERAWAY_REPORT_SUBJECT=LaserAway
LASERAWAY_REPORT_ATTACHMENT=*.xlsx

# Date range for processing (days ago from today)
LASERAWAY_START_DAYS_AGO=1
LASERAWAY_END_DAYS_AGO=1

